# DigitalOcean Configuration
DIGITALOCEAN_TOKEN=dop_v1_your_token_here
SUPERVISOR_REGION=nyc1
SUPERVISOR_SIZE=s-2vcpu-2gb

# Railway Configuration
RAILWAY_API_TOKEN=your_railway_api_token
RAILWAY_PROJECT_ID=your_railway_project_id
RAILWAY_ENVIRONMENT_ID=your_railway_environment_id

# PostgreSQL Configuration
# Get this from Railway PostgreSQL service
DATABASE_URL=postgresql://user:password@host:port/database
# Name of the PostgreSQL service in Railway (default: "Postgres")
DB_SERVICE_NAME=Postgres

# Monitoring Configuration
# Enable/disable continuous monitoring (true/false, default: true)
IS_ACTIVE=true
# Check interval in minutes (1-60, default: 1)
CHECK_INTERVAL=1
# Auto-disable after successful deployment (true/false, default: false)
AUTO_DISABLE=false
# Number of healthy cycles before auto-disable (default: 3)
HEALTHY_CYCLES_BEFORE_DISABLE=3

# Trigger.dev Configuration
# Version to deploy
TRIGGER_VERSION=v4.0.0
# Manual worker token override (optional - leave empty to extract from logs)
# Format: tr_wgt_xxxxxxxxxxxxx
TRIGGER_WORKER_TOKEN=
# Docker registry URL
DOCKER_REGISTRY_URL=

